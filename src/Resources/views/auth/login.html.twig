{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/loginform.css">
{% endblock %}

{% block body %}

<div class="page">
        <div class="container">
          <div class="left">
            <div class="login">Connexion</div>
            <div class="eula">
                {% if error %}
                    {{ error.messageKey|trans(error.messageData) }}
                    <br/>
                {% endif %}
                <a href="{{ path('forget-password') }}">Mot de passe oublié ?</a>
                <br/>
                <a href="{{ path('homepage') }}">Retour à l'accueil</a>
            </div>
          </div>
          <div class="right">
            <svg viewBox="0 0 320 300">
              <defs>
                <linearGradient
                                inkscape:collect="always"
                                id="linearGradient"
                                x1="13"
                                y1="193.49992"
                                x2="307"
                                y2="193.49992"
                                gradientUnits="userSpaceOnUse">
                  <stop
                        style="stop-color:#007991;"
                        offset="0"
                        id="stop876" />
                  <stop
                        style="stop-color:#78ffd6;"
                        offset="1"
                        id="stop878" />
                </linearGradient>
              </defs>
              <path d="m 40,120.00016 239.99984,-3.2e-4 c 0,0 24.99263,0.79932 25.00016,35.00016 0.008,34.20084 -25.00016,35 -25.00016,35 h -239.99984 c 0,-0.0205 -25,4.01348 -25,38.5 0,34.48652 25,38.5 25,38.5 h 215 c 0,0 20,-0.99604 20,-25 0,-24.00396 -20,-25 -20,-25 h -190 c 0,0 -20,1.71033 -20,25 0,24.00396 20,25 20,25 h 168.57143" />
            </svg>
            <form class="form" role="form" method="POST" action="{{ path('security_login_check') }}">
              <label for="email">Email</label>
              <input id="email" type="email" name="_email" value="{{ last_username }}">
              <label for="password">Mot de passe</label>
              <input id="password" type="password" name="_password">
              <input type="submit" id="submit" value="Me connecter">
            </form>
          </div>
        </div>
      </div>
      
{% endblock %}

{% block javascripts %}
<script src="/js/anime.min.js"></script>
    <script src="/js/snake-login.js"></script>
{% endblock %}