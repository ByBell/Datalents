{% extends 'baseHome.html.twig' %}
{% block activeprojet %} class="active"{% endblock %}
{% block body %}
    <div class="panel-header panel-header-lg" style="background-image:linear-gradient(135deg, #0500a3 0%,#d80003 100%)">

        <div class="container-fluid bouton-dashboard">


            <h2 style="color:white">Projet:{{ project.name }}</h2>


        </div>






    </div>


    <div class="content">


        <!-- <button type="button" class="btn btn-round btn-default dropdown-toggle btn-simple" data-toggle="dropdown">
    7 days
    </button> -->

            <div class="row" style="margin: 6em 0;">
                <div class="col-md-8" >
                    <div class="card " style="">
                        <div class="card-header">
                            <h5 class="card-category">Projet en cours</h5>
                            <h2 class="card-title text-center ">{{ project.name }}</h2>



                        </div>
                        <div class="card-body row">
                            <div class="col-md-12" style="display:flex; justify-content:center">
                                <h3 class="text-center">{{ project.description }}</h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card ">
                        <div class="card-header">
                            <h5 class=" card-category">Projet cr√©e par</h5>
                        </div>
                        <div class="card-body">
                            <div class="col-md-12">
                                <div class="col-md-12 text-center" style="display:flex; justify-content:center">
                                    <b class="col-md-12">{{ profile.firstname }} {{ profile.lastname }}</b>

                                </div>

                                <div class="col-md-12" style="display:flex; justify-content:center">
                                    <div class="photo rounded-circle " style="width: 8em; height: 8em;margin:1em 0;">
                                        <img src="{{ profile.photo }}" alt="">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 text-center">
                                <a class="btn btn-primary btn-round " href="">Voir le profile</a>
                            </div>
                        </div>
                    </div>
                </div>




                <div class="col-md-4">
                    <div class="card ">
                        <div class="card-header">
                            <h5 class="card-category">Talent 1</h5>
                            <h2 class="card-title">{{ project.personne1 }}</h2>

                        </div>
                        {% if personne1!= null %}
                            <div class="col-md-12">
                                <h5>Ce poste est pris par: {{ personne1.lastname }} {{ personne1.firstname }}</h5>
                            </div>
                            <div class="col-md-12" style="display:flex; justify-content:center">
                                <div class="photo rounded-circle " style="width: 5em; height: 5em;margin:1em 0;">
                                    <img src="{{ personne1.photo }}" alt="">
                                </div>
                            </div>


                        {% else %}

                            <div class="card-body col-md-12" style="display:flex; justify-content:center">
                                <a class="btn btn-primary btn-round" style="margin:1em auto" href="{{ path('edit-project', {'id' : project.id,'personne' : 'personne1'}) }}">Choisir ce Poste</a>
                            </div>
                        {% endif %}
                    </div>
                </div>



                {% if project.equipes >1 %}




