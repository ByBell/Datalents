{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="panel panel-default">
                    <div class="panel-heading">Ajoutez un projet</div>
                    <div class="panel-body">

                        {{ form_start(form) }}
                        <div class="form_group">
                            <div class="col-md-8 col-md-offset-2">
                                {{ form_label(form.name, 'Nom de votre projet',{'attr': {'class': 'form-control'}}) }}
                                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form_group">
                            <div class="col-md-8 col-md-offset-2">
                                {{ form_label(form.description, 'Description de ton projet',{'attr': {'class': 'form-control'}}) }}
                                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>





                        <div class="form_group">

                            <div class="col-md-8 col-md-offset-2">
                                {{ form_label(form.equipes, 'Combien de talents avez-vous besoin',{'attr': {'class': 'form-control'}}) }}
                                {{ form_widget(form.equipes, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-btn fa-user"></i> Lancer mon projet
                                </button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}