{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/create-project-form.css">
{% endblock %}

{% block body %}

<div class="page">
        <div class="container">
          <div class="left">
            <div class="login l-small">Créer un projet</div>
            <div class="eula">
                <a href="{{ path('home') }}">Retour au dashboard</a>
            </div>
          </div>
          <div class="right">
            <svg viewBox="0 0 320 300">
              <defs>
                <linearGradient
                                inkscape:collect="always"
                                id="linearGradient"
                                x1="13"
                                y1="193.49992"
                                x2="307"
                                y2="193.49992"
                                gradientUnits="userSpaceOnUse">
                  <stop
                        style="stop-color:#007991;"
                        offset="0"
                        id="stop876" />
                  <stop
                        style="stop-color:#78ffd6;"
                        offset="1"
                        id="stop878" />
                </linearGradient>
              </defs>
              <path d="m 40,120.00016 239.99984,-3.2e-4 c 0,0 24.99263,0.79932 25.00016,35.00016 0.008,34.20084 -25.00016,35 -25.00016,35 h -239.99984 c 0,-0.0205 -25,4.01348 -25,38.5 0,34.48652 25,38.5 25,38.5 h 215 c 0,0 20,-0.99604 20,-25 0,-24.00396 -20,-25 -20,-25 h -190 c 0,0 -20,1.71033 -20,25 0,24.00396 20,25 20,25 h 168.57143" />
            </svg>

            {{ form_start(form, {'attr': {'class': 'form', 'name': 'reset_password'}}) }}
              <label for="nom">Nom du projet</label>
              {{ form_widget(form.name) }}

              <label for="description">Description du projet</label>
              {{ form_widget(form.description) }}

              <label for="equipe">Nombre de talents souhaités</label>
              {{ form_widget(form.equipes) }}

              <input type="submit" id="submit" value="Suite">
              {{ form_end(form) }}


          </div>
        </div>
      </div>
      
{% endblock %}