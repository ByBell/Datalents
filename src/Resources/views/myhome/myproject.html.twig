{% extends 'baseHome.html.twig' %}
{% block activeprojet %} class="active"{% endblock %}
{% block body %}
<div class="panel-header panel-header-lg" style="background-image:linear-gradient(135deg, #0500a3 0%,#d80003 100%)">

    <div class="container-fluid bouton-dashboard">


    <h2 style="color:white">Mes Projets</h2>


    </div>






</div>


<div class="content">


    <!-- <button type="button" class="btn btn-round btn-default dropdown-toggle btn-simple" data-toggle="dropdown">
7 days
</button> -->
    {% for project in projects  %}
        {% if project.finish == false %}


    <div class="row" style="margin: 6em 0;">
            <div class="col-md-12">
                <img src="{{ not project.photo ? '/img/profil_hero_bg.png' : project.photo }}" alt="{{ project.name  }}" class="photo img-raised">
                    <div class="card ">
                        <div class="card-header">
                            <h5 class="card-category">Projet en cours</h5>



                        
                        </div>
                        <div class="card-body row">
                            <div class="col-md-8">
                                <div class="col-md-12" style="display:flex; flex-direction: column; justify-content:center">
                                    <h2 class="card-title text-center ">{{ project.name }}</h2>
                                    <h3 class="text-center">{{ project.description }}</h3>
                                </div>

                            </div>
                            <div class="col-md-4">
                                <div>
                                    <h5 class="card-category">Talents recherchés</h5>
                                    <div class="table-responsive col-md-12">
                                        <table class="table">
                                            <tbody>
                                            {% if project.equipes > 0 %}
                                                {% if project.emailpersonne1 != null %}
                                                    <tr>
                                                        <td class="text-center" style="color: darkgray">
                                                            {{ project.personne1 }}
                                                        </td>

                                                        <td class="text-right" style="color: darkgray">
                                                            <i class="fas fa-check"></i>
                                                        </td>
                                                    </tr>
                                                {% else %}
                                                    <tr>
                                                        <td class="text-center">
                                                            {{ project.personne1 }}
                                                        </td>

                                                        <td class="text-right">
                                                            <i class="fas fa-plus"></i>
                                                        </td>
                                                    </tr>
                                                {% endif %}
                                            {% endif %}
                                            {% if project.equipes > 1 %}
                                                {% if project.emailpersonne2 != null %}
                                                    <tr>
                                                        <td class="text-center" style="color: darkgray">
                                                            {{ project.personne2 }}
                                                        </td>

                                                        <td class="text-right" style="color: darkgray">
                                                            <i class="fas fa-check"></i>
                                                        </td>
                                                    </tr>
                                                {% else %}
                                                    <tr>
                                                        <td class="text-center">
                                                            {{ project.personne2 }}
                                                        </td>

                                                        <td class="text-right">
                                                            <i class="fas fa-plus"></i>
                                                        </td>
                                                    </tr>
                                                {% endif %}
                                            {% endif %}
                                            {% if project.equipes > 2 %}
                                                {% if project.emailpersonne3 != null %}
                                                    <tr>
                                                        <td class="text-center" style="color: darkgray">
                                                            {{ project.personne3 }}
                                                        </td>

                                                        <td class="text-right" style="color: darkgray">
                                                            <i class="fas fa-check"></i>
                                                        </td>
                                                    </tr>
                                                {% else %}
                                                    <tr>
                                                        <td class="text-center">
                                                            {{ project.personne3 }}
                                                        </td>

                                                        <td class="text-right">
                                                            <i class="fas fa-plus"></i>
                                                        </td>
                                                    </tr>
                                                {% endif %}
                                            {% endif %}
                                            {% if project.equipes > 3 %}
                                                {% if project.emailpersonne4 != null %}
                                                    <tr>
                                                        <td class="text-center" style="color: darkgray">
                                                            {{ project.personne4 }}
                                                        </td>

                                                        <td class="text-right" style="color: darkgray">
                                                            <i class="fas fa-check"></i>
                                                        </td>
                                                    </tr>
                                                {% else %}
                                                    <tr>
                                                        <td class="text-center">
                                                            {{ project.personne4 }}
                                                        </td>

                                                        <td class="text-right">
                                                            <i class="fas fa-plus"></i>
                                                        </td>
                                                    </tr>
                                                {% endif %}
                                            {% endif %}

                                            </tbody>
                                        </table>

                                    </div>

                                </div>
                            </div>
                    </div>
                        <div class="card-footer">
                            <div class="col-md-12" style="display:flex; justify-content:center">
                                <a class="btn btn-round btn-primary" href="{{ path('view-project',{'id': project.id}) }}">Voir les détails</a>
                            </div>
                        </div>
                    </div>
            </div>






    </div>

        {% endif %}
    {% endfor %}

    {% for project in projects  %}
        {% if project.finish == true %}


            <div class="row" style="margin: 6em 0;">
                <div class="col-md-12">
                    <img src="" class="photo">
                    <div class="card " style="height: 300px;background-image: url('{{ not project.photo ? '/img/profil_hero_bg.png' : project.photo }}')">
                        <div class="card-header">
                            <h5 class="card-category" style="color: white;">Projet Terminé</h5>
                            <div class="col-md-12" style="display:flex; flex-direction: column; justify-content:center">
                                <h2 class="card-title text-center " style="color:white">>{{ project.name }}</h2>
                                <h3 class="text-center" style="color:white">{{ project.description }}</h3>
                                <a class="btn btn-round btn-primary" href="{{ path('view-project',{'id': project.id}) }}">Voir les détails</a>
                            </div>


                        </div>

                    </div>

                </div>
            </div>

        {% endif %}
    {% endfor %}
</div>
{% endblock %}