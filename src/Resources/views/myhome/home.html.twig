                                <div class="card-body">
                                    <div class="profile-header">
                                        <h3 class="profile-fullname">{{ profile1.firstname~" "~profile1.lastname }}</h3>
                                        <span class="profile-title">{{ profile1.title }}</span>
                                    </div>

                                    <p class="profile-description">
                                        {{ profile1.resume }}
                                    </p>
                                    <a href="{{ path('profile', {'id': profile1.id}) }}" class="btn btn-primary">Voir le profil</a>
                                </div>
                            </div>
                        </div>

            {% endif %}
