    <<div class="content content-no-card">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
            {% if profile1 != null %}



                        <div class="profile-result col-md-4">
                            <img src="{{ not profile1.photo ? '/img/missing.png' : profile1.photo }}" alt="{{ profile1.firstname~" "~profile1.lastname }}" class="profile-photo img-raised">
