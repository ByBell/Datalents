                    <div class="row">
                        {% for project in projects %}
                            <div class="profile-result col-md-6">
                                <img style=" height:110px" src="{{ not project.photo ? '/img/profil_hero_bg.png' : project.photo }}" alt="{{ project.name  }}" class="photo img-raised col-md-12">
                                <div class="profile-card card card-raised">
                                    <div class="card-body">
                                        <div class="profile-header">
                                            <h3 class="profile-fullname">{{ project.name  }}</h3>
                                            <span class="profile-title">{{ project.description }}</span>
                                        </div>
                                        <div>
                                            <h5 class="card-category">Talents recherchés</h5>
                                            <div class="table-responsive col-md-12">
                                                <table class="table">
                                                    <tbody>
                                                    {% if project.equipes > 0 %}
                                                        {% if project.emailpersonne1 != null %}
                                                            <tr>
                                                                <td class="text-center" style="color: darkgray">
                                                                    {{ project.personne1 }}
                                                                </td>

                                                                <td class="text-right" style="color: darkgray">
                                                                    <i class="fas fa-check"></i>
                                                                </td>
                                                            </tr>
                                                        {% else %}
                                                            <tr>
                                                                <td class="text-center">
                                                                    {{ project.personne1 }}
                                                                </td>

                                                                <td class="text-right">
                                                                    <i class="fas fa-plus"></i>
                                                                </td>
                                                            </tr>
                                                        {% endif %}
                                                    {% endif %}
