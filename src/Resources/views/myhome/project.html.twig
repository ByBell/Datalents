                                                            <tr>
                                                                <td class="text-center" style="color: darkgray">
                                                                    {{ project.personne2 }}
                                                                </td>

                                                                <td class="text-right" style="color: darkgray">
                                                                    <i class="fas fa-check"></i>
                                                                </td>
                                                            </tr>
                                                        {% else %}
                                                            <tr>
                                                                <td class="text-center">
                                                                    {{ project.personne2 }}
                                                                </td>

                                                                <td class="text-right">
                                                                    <i class="fas fa-plus"></i>
                                                                </td>
                                                            </tr>
                                                        {% endif %}
                                                    {% endif %}
                                                    {% if project.equipes > 2 %}
                                                        {% if project.emailpersonne3 != null %}
                                                            <tr>
                                                                <td class="text-center" style="color: darkgray">
                                                                    {{ project.personne3 }}
                                                                </td>

                                                                <td class="text-right" style="color: darkgray">
                                                                    <i class="fas fa-check"></i>
                                                                </td>
                                                            </tr>
                                                        {% else %}
                                                            <tr>
                                                                <td class="text-center">
                                                                    {{ project.personne3 }}
                                                                </td>

                                                                <td class="text-right">
                                                                    <i class="fas fa-plus"></i>
                                                                </td>
                                                            </tr>
                                                        {% endif %}
                                                    {% endif %}
                                                    {% if project.equipes > 3 %}
                                                        {% if project.emailpersonne4 != null %}
                                                            <tr>
                                                                <td class="text-center" style="color: darkgray">
                                                                    {{ project.personne4 }}
                                                                </td>

                                                                <td class="text-right" style="color: darkgray">
                                                                    <i class="fas fa-check"></i>
                                                                </td>
                                                            </tr>
                                                        {% else %}
                                                            <tr>
                                                                <td class="text-center">
                                                                    {{ project.personne4 }}
                                                                </td>

                                                                <td class="text-right">
                                                                    <i class="fas fa-plus"></i>
                                                                </td>
                                                            </tr>
                                                        {% endif %}
                                                    {% endif %}

                                                    </tbody>
                                                </table>

                                        </div>
                                        <a href="{{ path('view-project',{'id':project.id })}}" class="btn btn-primary">Voir le project</a>
                                    </div>
                                </div>
